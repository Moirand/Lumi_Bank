<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingHorizontal="16dp"
    tools:context=".ui.qrisScreen.QrCodeShowBottomSheetDialogFragment">

    <ImageView
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo_lumi" />

    <TextView
        android:id="@+id/tv_rekening"
        style="@style/BodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="24dp"
        android:text="*************000"
        android:textColor="@color/primary_blue"
        tools:ignore="HardcodedText" />

    <TextView
        style="@style/BodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:textColor="@color/primary_dark_blue"
        tools:ignore="HardcodedText" />

    <ToggleButton
        android:id="@+id/toggle_saldo"
        style="@style/HeadlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="@null"
        android:drawableEnd="@drawable/eye_toggle_selector"
        android:drawablePadding="8dp"
        android:gravity="center|start"
        android:textAllCaps="false"
        android:textColor="@color/primary_blue"
        android:textOff="Rp *********"
        android:textOn="Rp 0"
        tools:ignore="HardcodedText" />

    <ImageView
        android:id="@+id/img_qr_code"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_gravity="center"
        android:layout_marginVertical="24dp"
        android:src="@drawable/qr_code_dark" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:src="@drawable/qris_dark" />

</LinearLayout>