<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.AccountFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_account"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/primary_light_blue"
        app:cardCornerRadius="0dp"
        app:contentPadding="16dp"
        app:contentPaddingBottom="24dp"
        app:contentPaddingTop="43dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_profil_pengguna"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_account_circle"
                app:tint="@color/primary_dark_blue" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:paddingStart="8dp">

                <TextView
                    android:id="@+id/tv_nama_pengguna"
                    style="@style/HeadlineText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pengguna"
                    android:textColor="#1C1C1C"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_email_pengguna"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="pengguna@gmail.com"
                    android:textColor="#1C1C1C"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/tv_no_hp_pengguna"
                    style="@style/BodyText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="082123456789"
                    android:textColor="#1C1C1C"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_edit"
                app:tint="@color/primary_dark_blue"
                tools:ignore="HardcodedText" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/cv_account">

        <LinearLayout
            android:id="@+id/linearlay_ubah_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_password"
                app:tint="@color/primary_dark_blue" />

            <TextView
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Ubah Password"
                android:textColor="#1C1C1C"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="6.7dp"
                android:layout_height="12.13dp"
                android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/neutral_03" />

        <LinearLayout
            android:id="@+id/linearlay_notifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_notifications_active"
                app:tint="@color/primary_dark_blue" />

            <TextView
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Notifikasi"
                android:textColor="#1C1C1C"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="6.7dp"
                android:layout_height="12.13dp"
                android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/neutral_03" />

        <LinearLayout
            android:id="@+id/linearlay_pusat_bantuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_contact_support"
                app:tint="@color/primary_dark_blue" />

            <TextView
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Pusat Bantuan"
                android:textColor="#1C1C1C"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="6.7dp"
                android:layout_height="12.13dp"
                android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/neutral_03" />

        <LinearLayout
            android:id="@+id/linearlay_syarat_ketentuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_article"
                app:tint="@color/primary_dark_blue" />

            <TextView
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Syarat Ketentuan"
                android:textColor="#1C1C1C"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="6.7dp"
                android:layout_height="12.13dp"
                android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/neutral_03" />

        <LinearLayout
            android:id="@+id/linearlay_kebijakan_privasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_admin_panel_settings"
                app:tint="@color/primary_dark_blue" />

            <TextView
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Kebijakan Privasi"
                android:textColor="#1C1C1C"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="6.7dp"
                android:layout_height="12.13dp"
                android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/neutral_03" />

        <LinearLayout
            android:id="@+id/linearlay_keluar_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="4dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_logout"
                app:tint="@color/primary_dark_blue" />

            <TextView
                style="@style/BodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="8dp"
                android:text="Keluar Akun"
                android:textColor="#1C1C1C"
                tools:ignore="HardcodedText" />

            <ImageView
                android:layout_width="6.7dp"
                android:layout_height="12.13dp"
                android:src="@drawable/ic_arrow_forward" />
        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:dividerColor="@color/neutral_03" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>