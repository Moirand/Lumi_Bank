<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="16dp"
    tools:context=".ui.registerScreen.InputPinConfirmationFragment">

    <TextView
        android:id="@+id/tv_konfirmasi_pin"
        style="@style/DisplayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="240dp"
        android:gravity="center"
        android:text="Konfirmasi PIN"
        android:textColor="@color/primary_blue"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tv_keterangan"
        style="@style/BodyText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Masukkan 6 digit PIN yang telah dibuat"
        android:textColor="@color/neutral_09"
        app:layout_constraintTop_toBottomOf="@+id/tv_konfirmasi_pin"
        tools:ignore="HardcodedText" />

    <include
        android:id="@+id/input_pin"
        layout="@layout/pin_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_keterangan" />

    <include
        android:id="@+id/tombol_nomor_pin"
        layout="@layout/pin_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintTop_toBottomOf="@+id/input_pin" />

</androidx.constraintlayout.widget.ConstraintLayout>