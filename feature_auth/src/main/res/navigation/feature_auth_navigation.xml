<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/feature_auth_navigation"
    app:startDestination="@id/onBoardingFragment">

    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.example.feature_auth.ui.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding">
        <action
            android:id="@+id/action_onBoardingFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_onBoardingFragment_to_inputEmailFragment"
            app:destination="@id/inputEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.feature_auth.ui.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/inputEmailFragment"
        android:name="com.example.feature_auth.ui.registerScreen.InputEmailFragment"
        android:label="fragment_input_email"
        tools:layout="@layout/fragment_input_email">
        <action
            android:id="@+id/action_inputEmailFragment_to_inputPhoneNumberFragment"
            app:destination="@id/inputPhoneNumberFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPasswordFragment"
        android:name="com.example.feature_auth.ui.registerScreen.CreatePasswordFragment"
        android:label="fragment_create_password"
        tools:layout="@layout/fragment_create_password">
        <action
            android:id="@+id/action_createPasswordFragment_to_inputBiodataFragment"
            app:destination="@id/inputBiodataFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputPhoneNumberFragment"
        android:name="com.example.feature_auth.ui.registerScreen.InputPhoneNumberFragment"
        android:label="fragment_input_phone_number"
        tools:layout="@layout/fragment_input_phone_number">
        <action
            android:id="@+id/action_inputPhoneNumberFragment_to_inputOtpFragment"
            app:destination="@id/inputOtpFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputOtpFragment"
        android:name="com.example.feature_auth.ui.registerScreen.InputOtpFragment"
        android:label="fragment_input_otp"
        tools:layout="@layout/fragment_input_otp">
        <action
            android:id="@+id/action_inputOtpFragment_to_createPasswordFragment"
            app:destination="@id/createPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputBiodataFragment"
        android:name="com.example.feature_auth.ui.registerScreen.InputBiodataFragment"
        android:label="fragment_input_biodata"
        tools:layout="@layout/fragment_input_biodata">
        <action
            android:id="@+id/action_inputBiodataFragment_to_createPinFragment"
            app:destination="@id/createPinFragment" />
    </fragment>
    <fragment
        android:id="@+id/createPinFragment"
        android:name="com.example.feature_auth.ui.registerScreen.CreatePinFragment"
        android:label="fragment_create_pin"
        tools:layout="@layout/fragment_create_pin">
        <action
            android:id="@+id/action_createPinFragment_to_inputPinConfirmationFragment"
            app:destination="@id/inputPinConfirmationFragment" />
    </fragment>
    <fragment
        android:id="@+id/inputPinConfirmationFragment"
        android:name="com.example.feature_auth.ui.registerScreen.InputPinConfirmationFragment"
        android:label="fragment_input_pin_confirmation"
        tools:layout="@layout/fragment_input_pin_confirmation">
        <action
            android:id="@+id/action_inputPinConfirmationFragment_to_successRegisterFragment"
            app:destination="@id/successRegisterFragment" />
    </fragment>
    <fragment
        android:id="@+id/successRegisterFragment"
        android:name="com.example.feature_auth.ui.registerScreen.SuccessRegisterFragment"
        android:label="fragment_success_register"
        tools:layout="@layout/fragment_success_register" />
</navigation>