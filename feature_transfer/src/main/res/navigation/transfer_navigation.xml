<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/transfer_navigation"
    app:startDestination="@id/savedAccountFragment">

    <fragment
        android:id="@+id/savedAccountFragment"
        android:name="com.example.feature_transfer.ui.savedAccountScreen.SavedAccountFragment"
        android:label="fragment_saved_account"
        tools:layout="@layout/fragment_saved_account">
        <action
            android:id="@+id/action_savedAccountFragment_to_transferInputFragment"
            app:destination="@id/transferInputFragment" />
        <action
            android:id="@+id/action_savedAccountFragment_to_fellowBankAccountInputFragment"
            app:destination="@id/fellowBankAccountInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/fellowBankAccountInputFragment"
        android:name="com.example.feature_transfer.ui.fellowBankAccountInputScreen.FellowBankAccountInputFragment"
        android:label="fragment_fellow_bank_account_input"
        tools:layout="@layout/fragment_fellow_bank_account_input" >
        <action
            android:id="@+id/action_fellowBankAccountInputFragment_to_transferInputFragment"
            app:destination="@id/transferInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/transferInputFragment"
        android:name="com.example.feature_transfer.ui.TransferInputFragment"
        android:label="fragment_transfer_input"
        tools:layout="@layout/fragment_transfer_input">
        <argument
            android:name="accountDestinationName"
            app:argType="string" />
        <argument
            android:name="accountDestinationNo"
            app:argType="string" />
        <argument
            android:name="accountDestinationBank"
            app:argType="string" />
        <action
            android:id="@+id/action_transferInputFragment_to_transferPinInputFragment"
            app:destination="@id/transferPinInputFragment" />
    </fragment>
    <fragment
        android:id="@+id/transferPinInputFragment"
        android:name="com.example.feature_transfer.ui.TransferPinInputFragment"
        android:label="fragment_transfer_pin_input"
        tools:layout="@layout/fragment_transfer_pin_input">
        <argument
            android:name="accountDestinationName"
            app:argType="string" />
        <argument
            android:name="accountDestinationNo"
            app:argType="string" />
        <argument
            android:name="accountDestinationBank"
            app:argType="string" />
        <argument
            android:name="transferAmount"
            app:argType="integer" />
        <argument
            android:name="transferDescription"
            app:argType="string" />
        <action
            android:id="@+id/action_transferPinInputFragment_to_transferSuccessFragment"
            app:destination="@id/transferSuccessFragment"
            app:popUpTo="@id/transferInputFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/transferSuccessFragment"
        android:name="com.example.feature_transfer.ui.TransferSuccessFragment"
        android:label="fragment_transfer_success"
        tools:layout="@layout/fragment_transfer_success">
        <argument
            android:name="transferId"
            app:argType="string" />
        <action
            android:id="@+id/action_transferSuccessFragment_to_transferDetailFragment"
            app:destination="@id/transferDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/transferDetailFragment"
        android:name="com.example.feature_transfer.ui.TransferDetailFragment"
        android:label="fragment_transfer_detail"
        tools:layout="@layout/fragment_transfer_detail">
        <argument
            android:name="transferId"
            app:argType="string" />
    </fragment>

</navigation>