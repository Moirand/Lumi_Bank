<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Styles for text elements -->
    <style name="DisplayText">
        <item name="android:fontFamily">@font/calibrib</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="HeadlineText">
        <item name="android:fontFamily">@font/calibrib</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BodyText">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="CaptionText">
        <item name="android:fontFamily">@font/calibri</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Styles for button elements -->
    <style name="Button" parent="BodyText">
        <item name="android:textAllCaps">false</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="PrimaryActiveButton" parent="Button">
        <item name="android:background">@drawable/btn_primary_active</item>
        <item name="android:textColor">@color/neutral_01</item>
    </style>

    <style name="PrimaryInactiveButton" parent="Button">
        <item name="android:background">@drawable/btn_primary_inactive</item>
        <item name="android:textColor">@color/neutral_03</item>
    </style>

    <style name="SecondaryActiveButton" parent="Button">
        <item name="android:background">@drawable/btn_secondary_active</item>
        <item name="android:textColor">@color/primary_blue</item>
    </style>

    <style name="SecondaryInactiveButton" parent="Button">
        <item name="android:background">@drawable/btn_secondary_inactive</item>
        <item name="android:textColor">@color/neutral_03</item>
    </style>

    <style name="GradientActiveButton" parent="Button">
        <item name="android:background">@drawable/btn_gradient_active</item>
        <item name="android:textColor">@color/neutral_01</item>
    </style>

    <style name="GradientInactiveButton" parent="Button">
        <item name="android:background">@drawable/btn_secondary_inactive</item>
        <item name="android:textColor">@color/neutral_03</item>
    </style>
</resources>