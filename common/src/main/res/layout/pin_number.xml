        style="@style/HeadlineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:text="7"
        android:textColor="@color/neutral_09"
        app:layout_constraintEnd_toStartOf="@id/btn_num_8"
